<div class="form-container">
  <!-- Lado izquierdo: Bot贸n de iniciar sesi贸n -->
  <div class="col-left">
    <%= link_to "Iniciar sesi贸n", new_session_path(resource_name), class: "btn-log-in" %>
  </div>

  <!-- Lado derecho: Formulario de creaci贸n de cuenta -->
  <div class="col-right">
    <h2 class="titulo">Crear cuenta de Alumno</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :nombre %><br />
        <%= f.text_field :nombre, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :apellido %><br />
        <%= f.text_field :apellido, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :numero_alumno %><br />
        <%= f.text_field :numero_alumno, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "input" %>
      </div>

      <div class="actions">
        <%= f.submit "Registrar", class: "btn-registrar" %>
      </div>
    <% end %>
  </div>
</div>
