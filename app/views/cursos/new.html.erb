<div class="agregar-curso-container">
  <h1>AGREGAR CURSO</h1>

  <div class="informacion-profesor">
    <p><strong>Nombre:</strong> <%= current_profesor.nombre %></p>
    <p><strong>Email:</strong> <%= current_profesor.email %></p>
    <p><strong>ID:</strong> <%= current_profesor.id %></p>
  </div>

  <h2>CREAR NUEVO CURSO</h2>

  <%= form_with(model: @curso, local: true, class: 'form-curso') do |form| %>
    <div>
      <%= form.label :nombre %>
      <%= form.text_field :nombre %>
    </div>

    <div>
      <%= form.label :sigla %>
      <%= form.text_field :sigla %>
    </div>

    <!-- Nuevo campo para la descripción -->
    <div>
      <%= form.label :descripcion %>
      <%= form.text_field :descripcion %>
    </div>

    <div class="botones-container">
      <%= form.submit 'CREAR CURSO', class: 'btn-detalles' %>
      <%= link_to 'VOLVER AL MENÚ', profesores_menu_principal_path, class: 'btn-cerrar-sesion2' %>
    </div>
  <% end %>
</div>
