<div class="form-container">
  <h2 class="titulo">Forgot your password?</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "input" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn-reset-password" %>
    </div>
  <% end %>

  <div class="link-container2">
    <%= link_to "Log in", new_session_path(resource_name), class: "link-custom2" %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "link-custom2" %>
  </div>

</div>
