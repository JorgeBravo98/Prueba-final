<div class="mis-cursos-container">
  <h1>Mis Cursos</h1>
  <ul class="cursos-lista">
    <% @cursos.each do |curso| %>
      <li>
        <strong><%= curso.nombre %></strong> - <%= curso.sigla %>
        <%= link_to 'INGRESAR', curso_path(curso), class: 'btn-detalles' %>
        <%= link_to 'EDITAR', edit_curso_path(curso),  class: 'btn-detalles' %>
        <%= link_to 'ELIMINAR', curso_path(curso), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn-detalles' %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'VOLVER AL MENÚ', profesores_menu_principal_path, class: 'btn-volver-menu' %>
</div>
