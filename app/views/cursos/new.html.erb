<h1>Agregar Curso</h1>

<h2>Información del Profesor</h2>

<p><strong>Nombre:</strong> <%= @profesor.nombre %></p>
<p><strong>Email:</strong> <%= @profesor.email %></p>
<p><strong>ID:</strong> <%= @profesor.id %></p>

<h2>Crear Nuevo Curso</h2>

<%= form_with(model: @curso, local: true) do |form| %>
  <div>
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div>
    <%= form.label :sigla %>
    <%= form.text_field :sigla %>
  </div>

  <div>
    <%= form.submit 'Crear Curso', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Volver al Menú Principal', profesores_menu_principal_path, class: 'btn btn-secondary' %>
